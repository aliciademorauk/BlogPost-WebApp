<%= form_with model: blog_post do |form|%>
    <% if form.object.errors.any?%>
    <div>
        <%form.object.errors.full_messages.each do |message|%>
        <div><%=message%></div>
        <%end%>
    </div>
    <%end%>

<div>
    <%=form.label :title%></h2>
    <%=form.text_field :title%>
</div>
<div>
    <%=form.label :body%></h2>
    <%=form.text_area :body%>
</div>

<%=form.button%>
<%end%>